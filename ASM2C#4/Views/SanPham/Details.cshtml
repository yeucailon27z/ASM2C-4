@model ASM2C_4.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Chi tiết sản phẩm</h1>

    <div class="row">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-md-6">
            <img src="@Model.ImgUrl" alt="@Model.Name" class="img-fluid rounded shadow" style="max-height: 400px; object-fit: cover;">
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-6">
            <h2 class="text-primary">@Model.Name</h2>
            <p class="fw-bold text-success">Giá: @Model.Price.ToString("C")</p>
            <p class="text-muted">
                <strong>Mô tả:</strong> @Model.Description
            </p>

            <p>
                <strong>Trạng thái:</strong>
                @if (Model.Status == 1)
                {
                    <span class="badge bg-success">Hoạt động</span>
                }
                else
                {
                    <span class="badge bg-danger">Ngừng kinh doanh</span>
                }
            </p>

            <!-- Nút điều hướng -->
            <div class="mt-4">

                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="IndexAdmin" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Sửa sản phẩm
                    </a>
                }
                else
                {
                    <a asp-action="IndexKhachHang" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                }

            </div>
        </div>
    </div>
</div>

<style>
    .img-fluid {
        max-width: 100%;
        height: auto;
        border: 1px solid #ddd;
    }
</style>
